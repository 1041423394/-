/**app.wxss**/
@import 'css/animate.wxss';

page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 28rpx;
}

view, form, textarea, canvas, scroll-view, swiper, image, input {
  /* box-sizing: border-box; */
  width: 100%;
  display: block;
  -webkit-user-select: none;
}

button {
  border: none;
  background: #e8633c;
  font-size: 60rpx;
  color: #fff;
}

button::after {
  border: none;
  background: #fff;
  width: auto;
  height: auto;
  font-size: 60rpx;
  color: #e8633c;
}

.border-b {
  border-bottom: 1px solid #e0e1e1;
}

.border-t {
  border-top: 1px solid #e0e1e1;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-strong {
  font-weight: bold;
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.ellipsis2, .ellipsis3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ellipsis3 {
  -webkit-line-clamp: 3;
}

.hidden {
  overflow: hidden;
}

.hidden-x {
  overflow-x: hidden;
}

.nowrap {
  white-space: nowrap;
}

.fml-flex {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
}

.fml-flex-1 {
  flex: 1;
}

.fml-flex-cloumn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.fml-modal {
  position: fixed;
  width: 100%;
  right: 0;
  bottom: 0;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
}
