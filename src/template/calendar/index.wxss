/* pages/calendar/calendar.wxss */

.box {
    display: flex;
}

.box-lr {
    flex-direction: row;
}

.box-rl {
    flex-direction: row-reverse;
}

.box-tb {
    flex-direction: column;
}

.box-pack-center {
    justify-content: center;
}

.box-align-center {
    align-items: center;
}

.box-wrap {
    flex-wrap: wrap;
    background: #fff;
}

.flex {
    flex-grow: 1;
}

.bg {
    background-image: linear-gradient(to bottom, #faefe7, #ffcbd7);
    overflow: hidden;
}

.pink-color {
    color: #ff629a;
}

.white-color {
    color: #fff;
}

.fs24 {
    font-size: 24rpx;
}

.fs26 {
    font-size: 26rpx;
}

.fs28 {
    font-size: 28rpx;
}

.fs32 {
    font-size: 32rpx;
}

.fs36 {
    font-size: 36rpx;
}

.calendar {
    width: 100%;
    box-sizing: border-box;
}

.top-handle {
    height: 80rpx;
}

.prev {
    text-align: right;
    height: 80rpx;
}

.next {
    height: 80rpx;
}

.prev-handle {
    width: 80rpx;
    height: 100%;
}

.next-handle {
    width: 80rpx;
    height: 100%;
}

.date-area {
    height: 80rpx;
    text-align: center;
    color: #2A2E32;
    font-size: 32rpx;
    font-weight: bold;
}

.fml-head-calendar {
    background: #EBEFF3;
}

.weeks {
    height: 60rpx;
    line-height: 60rpx;
}

.week {
    text-align: center;
}

.grid {
    width: 105rpx;
    height: 105rpx;
}

.grid.other {
    width: 105rpx;
    height: 144rpx;
    box-sizing: border-box;
    border: 1px solid #f4f4f4;
    border-right: 0;
    margin-bottom: -1px;
    align-items: flex-start
}

.day {
    width: 76rpx;
    height: 76rpx;
    font-size: 30rpx;
}

.grid.other .day {
    height: auto;
}

.normal-day-color {
    color: #2A2E32;
}

.day-choosed-color {
    color: #fff;
}


