.address-edit-info {
    padding: 6rpx 5rpx 6rpx 5rpx;
    height: 90rpx;
}

.edit-info-item {
    width: 160rpx;
}

.address-input {
    height: 50rpx;
}

.address-input input {
    padding: 0 10rpx;
}

.address-checkbox {
    margin-top: 40rpx;
    padding-left: 20rpx;
    color: #ABABAB
}

.address-confirm {
    padding: 10rpx;
    background: #fe9b38;
    color: #fff;
    margin: 40rpx 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.address-icon {
    width: 30rpx;
    height: 45rpx;
    margin-left: 5rpx;
}

.layer-wrap {
    z-index: 3;
    position: relative;
    z-index: 4;
    background: #fff;
    padding: 0 32rpx;
    box-sizing: border-box;
}